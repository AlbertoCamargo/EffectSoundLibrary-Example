<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amcamargo.soundtest.Main">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mute"
        android:id="@+id/mutecheckbox"
        android:onClick="enableSound"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <ImageButton
        android:onClick="war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/tank"
        android:background="#00ffffff"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="explosion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/mushroom_cloud"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="scream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/edvard_unch"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton9" />

    <ImageButton
        android:onClick="carCrashed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/crashed"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton9" />

    <ImageButton
        android:onClick="screamingNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/crying"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:onClick="fuckYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/swearing"
        android:background="#00ffffff"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="beast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:src="@drawable/targaryen_house"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:onClick="carBreaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton9"
        android:src="@drawable/car"
        android:background="#00ffffff"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:onClick="blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/horror"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:onClick="effectsEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mute effects"
        android:id="@+id/muteEffects"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
